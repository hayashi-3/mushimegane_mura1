<div class="row">
  <div class="col-md-4 col-md-offset-5">
		<%= form_with model: @participant, url: organizers_participant_path(@participant.id), local: true do |f| %>

			<!-- ニックネーム -->
			<div class="form-group">
                <%= f.label :nickname, "ニックネーム"%>
                <%= f.text_field :nickname, autofocus: true %>
			</div>

			<!-- 電話番号 -->
			<div class="form-group">
                <%= f.label :telephone_number, "電話番号"%>
                <%= f.text_area :telephone_number, autofocus: true%>
			</div>

			<!-- 　email　 -->
			<div class="form-group">
                <%= f.label :email, "メール"%>
                <%= f.datetime_select :email, autofocus: true%>
			</div>

			<!-- 在籍ステータス -->
			<div class="form-group">
                <%= f.label :is_deleted, "在籍ステータス"%>
                <%= f.select :is_deleted, {'退会済': true, '在籍中': false}, { class: 'form-control' , required: true } %>
			</div>
			<%= f.submit '変更する',class:"btn btn-primary btn-md" %>
		<% end %>
  </div>
</div>