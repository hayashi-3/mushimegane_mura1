<div class="row">
  <div class="col-md-4 col-md-offset-5">
		<%= form_with model: @event, url: organizers_event_path(@event.id), local: true do |f| %>

			<!-- イベント名 -->
			<div class="form-group">
                <%= f.label :event_name, "イベント名"%>
                <%= f.text_field :event_name, autofocus: true %>
			</div>

			<!-- イベント内容説明 -->
			<div class="form-group">
                <%= f.label :content, "イベント内容"%>
                <%= f.text_area :content, autofocus: true%>
			</div>

			<!-- 　開催日時　 -->
			<div class="form-group">
                <%= f.label :date_and_time, "日時"%>
                <%= f.datetime_select :date_and_time, autofocus: true%>
			</div>

			<!-- 開催ステータス -->
			<div class="form-group">
                <%= f.label :is_active, "開催状況"%>
                <%= f.select :is_active, {'開催中': true, '終了': false}, { class: 'form-control' , required: true } %>
			</div>
			<%= f.submit '新規登録',class:"btn btn-primary btn-md" %>
		<% end %>
  </div>
</div>